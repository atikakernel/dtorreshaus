# ====================================
# CONFIGURACIÓN BACKEND - dtorreshaus
# ====================================
# IMPORTANTE: Copia este archivo como .env y rellena con tus valores reales
# NUNCA subas .env a git (ya está en .gitignore)

# ====================================
# ENTORNO
# ====================================
NODE_ENV=development
PORT=3001

# ====================================
# FRONTEND URL (para CORS)
# ====================================
FRONTEND_URL=http://localhost:5173
# En producción: https://tudominio.com

# ====================================
# BASE DE DATOS
# ====================================
# Formato: postgresql://usuario:password@host:puerto/nombre_db
DATABASE_URL="postgresql://dtorreshaus:tu_password_seguro@localhost:5432/dtorreshaus_db"
# En producción EC2: postgresql://dtorreshaus:password@localhost:5432/dtorreshaus_db

# ====================================
# WOMPI - https://comercios.wompi.co/
# ====================================
# Desarrollo (sandbox)
WOMPI_PUBLIC_KEY_TEST=pub_test_xxxxx
WOMPI_PRIVATE_KEY_TEST=prv_test_xxxxx
WOMPI_EVENTS_SECRET_TEST=test_events_xxxxx

# Producción
WOMPI_PUBLIC_KEY_PROD=pub_prod_xxxxx
WOMPI_PRIVATE_KEY_PROD=prv_prod_xxxxx
WOMPI_EVENTS_SECRET_PROD=prod_events_xxxxx

# Usar claves de producción o test
WOMPI_PUBLIC_KEY=${WOMPI_PUBLIC_KEY_TEST}
WOMPI_PRIVATE_KEY=${WOMPI_PRIVATE_KEY_TEST}
WOMPI_EVENTS_SECRET=${WOMPI_EVENTS_SECRET_TEST}

# ====================================
# MERCADO PAGO - https://www.mercadopago.com.co/developers
# ====================================
# Desarrollo (sandbox)
MERCADOPAGO_PUBLIC_KEY_TEST=TEST-xxxxx
MERCADOPAGO_ACCESS_TOKEN_TEST=TEST-xxxxx

# Producción
MERCADOPAGO_PUBLIC_KEY_PROD=APP_USR-xxxxx
MERCADOPAGO_ACCESS_TOKEN_PROD=APP_USR-xxxxx

# Usar claves de producción o test
MERCADOPAGO_PUBLIC_KEY=${MERCADOPAGO_PUBLIC_KEY_TEST}
MERCADOPAGO_ACCESS_TOKEN=${MERCADOPAGO_ACCESS_TOKEN_TEST}

# ====================================
# EMAIL (Nodemailer)
# ====================================
# Opción 1: Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu@gmail.com
SMTP_PASS=tu_app_password

# Opción 2: SendGrid
# SENDGRID_API_KEY=SG.xxxxx

# Email remitente
EMAIL_FROM=ventas@dtorreshaus.com

# ====================================
# ADMIN PANEL
# ====================================
# Contraseña para acceder al panel de admin
ADMIN_PASSWORD=cambiar_en_produccion_password_seguro
# Email del administrador (para recibir notificaciones)
ADMIN_EMAIL=admin@dtorreshaus.com

# ====================================
# JWT (para autenticación de admin)
# ====================================
JWT_SECRET=tu_secreto_super_seguro_cambiame_en_produccion
JWT_EXPIRES_IN=7d

# ====================================
# URLs DE CALLBACK
# ====================================
# URLs a donde redirigir después del pago
PAYMENT_SUCCESS_URL=${FRONTEND_URL}/payment-success
PAYMENT_FAILURE_URL=${FRONTEND_URL}/payment-failure
PAYMENT_PENDING_URL=${FRONTEND_URL}/payment-pending

# ====================================
# CONFIGURACIÓN DE ENVÍOS
# ====================================
DEFAULT_SHIPPING_COST=8000
FREE_SHIPPING_THRESHOLD=150000

# ====================================
# LOGS
# ====================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
